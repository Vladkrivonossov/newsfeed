{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "module": "es2020",
    "moduleResolution": "Node",
    "jsx": "react",
    "lib": ["dom", "es2020", "dom.iterable", "webworker"],
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@features/*": ["features/*"],
      "@app/*": ["app/*"],
      "@images/*": ["images/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "./src/features/serviceWorker"]
}
